<head>
  <meta charset="utf-8">
  <title>Chippewa Valley - The One</title>
  <link rel="stylesheet" href="../stylesheets/application.css" type="text/css"/>
  <link rel="stylesheet" href="../stylesheets/home.css.scss" type="text/css"/>
</head>
<body>
  <div class="titles">
       <h1>Sign up today and start ridesharing</h1>
       <h3>It's free to sign up!</h3>
</div>
<%= form_for(@user) do |f| %>
  
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :userName %><br>
    <%= f.text_area :userName %>
  </div>

  <div class="field">
    <%= f.label :firstName %><br>
    <%= f.text_area :firstName %>
  </div>

  <div class="field">
    <%= f.label :lastName %><br>
    <%= f.text_area :lastName %>
  </div>

  <div class="field">
    <%= f.label :Email %><br>
    <%= f.text_area :Email %>
  </div>

  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_area :phone %>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
    <p>Already have an account? <a href="/signin">Click here to sign in</a></p>

</body>
